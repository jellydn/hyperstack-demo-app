{
  "name": "hyperstack-demo-app",
  "version": "1.0.28",
  "private": true,
  "scripts": {
    "build": "tsc && tsc-alias && tscp",
    "build:dev": "cd dist && node-dev bin/hyperstack.js start",
    "build:watch": "tscp && concurrently -n typescript,aliases,public 'tsc -w' 'tsc-alias -w'",
    "dev": "ts-node-dev bin/hyperstack.ts start",
    "hyperstack": "bin/hyperstack",
    "test": "jest --runInBand --logHeapUsage --update-snapshot",
    "test:ci:apps": "pnpm test"
  },
  "dependencies": {
    "@hyperstackjs/initializer-jwt": "1.0.34",
    "hyperstack": "1.0.34",
    "lodash": "4.17.21",
    "sqlite3": "5.1.7",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.6.3",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@hyperstackjs/testing": "1.0.34",
    "@sentry/node": "^7.60.0",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.12",
    "@types/node": "18.19.59",
    "@types/validator": "13.12.2",
    "concurrently": "8.2.2",
    "jest": "29.7.0",
    "jest-extended": "3.2.4",
    "mkdirp": "3.0.1",
    "node-dev": "8.0.0",
    "node-notifier": "10.0.1",
    "rimraf": "5.0.10",
    "stylomatic": "0.8.1",
    "time-require": "0.1.2",
    "ts-jest": "29.2.5",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "1.8.10",
    "tsup": "7.2.0",
    "typescript-cp": "0.1.9"
  }
}
